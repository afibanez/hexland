<Menu>:
    logo_img: logo_img
    AnchorLayout:
        size: Window.size
        anchor_x: 'center'
        anchor_y: 'top'

        Image:
            id: logo_img
            size_hint: 0.8,0.3
            source: 'assets/logo.png'

    AnchorLayout:
        size: Window.size
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 50

        BoxLayout:
            size_hint: 0.7,0.5 # Desactivem size_hint
            orientation: 'vertical'
            spacing: 10
            MenuButton:
                disabled: True
                text: 'Continue Game (Soon)'

            MenuButton:
                disabled: True
                text: 'New Game VS IA (Soon)'

            MenuButton:
                text: 'New Game PVP'


<MenuButton>:
    background_normal: 'atlas://assets/uitiles/green_button02'
    background_down: 'atlas://assets/uitiles/green_button03'


<HexlandGame>:
    canvas.before:
        Color:
            rgba: 139/255., 225/255., 235/255., 1
        Rectangle:
            pos: self.pos
            size: self.size

<Tile>:
    # Desactivem size_hint
    size_hint: None,None
    # mida imatge tile
    size: 65,89 
    # Punts hexagon superior
    p1: 33, 22
    p2: 0, 38
    p3: 0, 72
    p4: 32, 88
    p5: 64, 72
    p6: 64, 38

    # Detall aigua: sota el tile
    Image:
        texture: root.gridparent.baseatlas['tileWater_shadow']
        size: root.size # mida del pare
        pos: root.pos[0],root.pos[1]-22

    # El tile en si mateix
    Image:
        texture: root.gridparent.baseimg # definida al pare
        size: root.size # posicio i mida del pare
        pos: root.pos

    # Les fitxes: queden a la capa superior
    Image:
        texture: root.upperimg # definida al pare
        size: root.size # posicio i mida del pare
        pos: root.pos[0],root.pos[1]+22

